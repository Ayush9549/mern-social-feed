{
    "version": 2,
    "builds": [
      {
        "src": "backend/server.js",
        "use": "@vercel/node",
        "config": { "includeFiles": ["backend/**"] }
      },
      {
        "src": "feed-app/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "feed-app/$1"
      }
    ],
    "env": {
      "MONGO_URI": "@mongo_uri",
      "PORT": "5000"
    }
  }
